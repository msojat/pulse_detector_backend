<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/static/css/bootstrap.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <script src="/static/js/jquery.js"></script>
    <script src="/static/js/bootstrap.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
    <div class="container">
        <div id="breadcrumbs" class="row">
            <div class="btn-group btn-breadcrumb">
                <a href="/" class="btn btn-primary"><i class="glyphicon glyphicon-home"></i></a>
                <a href="{{{url}}}" class="btn btn-primary">{{{ fullname }}}</a>
                <a style="cursor: text" class="btn btn-primary">Sessions</a>
            </div>
        </div>
        <div class="jumbotron">
            <label>User</label>
            <p>{{{ fullname }}}</p>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Time</th>
                    <th class="text-center">Download</th>
                </tr>
                </thead>
                <tbody>
                {{#each data}}
                    <tr>
                        <th scope="row">{{this.index_increment}}</th>
                        <td scope="row">{{this.start_time}}</td>
                        <td class="text-center">
                            <a href="{{{this.url}}}">
                                <span class="glyphicon glyphicon-download-alt"></span>
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            $('a').on('dragend', function () {
                var $this = $(this),
                        $parent = $this.parent(),
                        $next = $(this.nextSibling); // $.next() doesn't include text
                $this.detach().insertBefore($next);
            });
        });
    </script>
</body>
</html>